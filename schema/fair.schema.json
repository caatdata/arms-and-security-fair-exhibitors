{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fair",
  "description": "A single arms and security fair, possibly including exhibitors.",
  "definitions": {
    "text": {
      "description": "A non-empty string.",
      "type": "string",
      "pattern": "^."
    },
    "url": {
      "$comment": "Poor source data will not pass even the simplest URL regex rule.",
      "type": "string"
    },
    "dateString": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "utcDatetimeString": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\+00:00$"
    },
    "social": {
      "type": "object",
      "required": [
        "platform",
        "handle"
      ],
      "properties": {
        "platform": {
          "$ref": "#/definitions/text"
        },
        "handle": {
          "$ref": "#/definitions/text"
        }
      }
    },
    "textOrTextArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/text"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/text"
          }
        }
      ]
    },
    "urlOrUrlArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/url"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/url"
          }
        }
      ]
    },
    "socialOrSocialArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/social"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/social"
          }
        }
      ]
    },
    "virtualLocation": {
      "type": "object",
      "required": [
        "@type",
        "url"
      ],
      "additionalProperties": false,
      "properties": {
        "@type": {
          "const": "VirtualLocation"
        },
        "url": {
          "$ref": "#/definitions/urlOrUrlArray"
        }
      }
    },
    "eventLocation": {
      "anyOf": [
        {
          "$ref": "#/definitions/url"
        },
        {
          "$ref": "#/definitions/virtualLocation"
        }
      ]
    },
    "eventLocationOrLocationArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/eventLocation"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/eventLocation"
          }
        }
      ]
    },
    "exhibitor": {
      "type": "object",
      "required": [
        "@type",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "name": {
          "$ref": "#/definitions/text"
        },
        "alternateName": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "exhibitorUrl": {
          "$ref": "#/definitions/url"
        },
        "address": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "country": {
          "$ref": "#/definitions/text"
        },
        "website": {
          "$ref": "#/definitions/urlOrUrlArray"
        },
        "telephone": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "social": {
          "$ref": "#/definitions/socialOrSocialArray"
        },
        "tag": {
          "$ref": "#/definitions/textOrTextArray"
        }
      }
    },
    "organizer": {
      "type": "object",
      "required": [
        "@type",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "name": {
          "$ref": "#/definitions/text"
        },
        "alternateName": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "organizerUrl": {
          "$ref": "#/definitions/url"
        },
        "address": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "country": {
          "$ref": "#/definitions/text"
        },
        "website": {
          "$ref": "#/definitions/urlOrUrlArray"
        },
        "telephone": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "social": {
          "$ref": "#/definitions/socialOrSocialArray"
        }
      }
    },
    "exhibitorOrExhibitorArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/exhibitor"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/exhibitor"
          }
        }
      ]
    },
    "organizerOrOrganizerArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/organizer"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/organizer"
          }
        }
      ]
    }
  },
  "type": "object",
  "required": [
    "name"
  ],
  "dependencies": {
    "exhibitor": [
      "exhibitorListDate"
    ]
  },
  "additionalProperties": false,
  "properties": {
    "@context": {
      "const": [
        "http://schema.org/",
        {
          "exhibitor": {
            "@id": "http://schema.org/performer"
          },
          "exhibitorListUrl": {
            "@id": "http://schema.org/url"
          },
          "website": {
            "@id": "http://schema.org/url"
          },
          "organizerUrl": {
            "@id": "http://schema.org/url"
          },
          "exhibitorUrl": {
            "@id": "http://schema.org/url"
          }
        }
      ]
    },
    "@type": {
      "const": [
        "ExhibitionEvent",
        "Event"
      ]
    },
    "name": {
      "$ref": "#/definitions/text"
    },
    "alternateName": {
      "$ref": "#/definitions/textOrTextArray"
    },
    "superEvent": {
      "type": "object",
      "required": [
        "@type",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "@type": {
          "const": "EventSeries"
        },
        "name": {
          "$ref": "#/definitions/text"
        }
      }
    },
    "edition": {
      "$ref": "#/definitions/text"
    },
    "startDate": {
      "$ref": "#/definitions/dateString"
    },
    "endDate": {
      "$ref": "#/definitions/dateString"
    },
    "location": {
      "$ref": "#/definitions/eventLocationOrLocationArray"
    },
    "country": {
      "$ref": "#/definitions/text"
    },
    "online": {
      "type": "boolean"
    },
    "website": {
      "$ref": "#/definitions/urlOrUrlArray"
    },
    "social": {
      "$ref": "#/definitions/socialOrSocialArray"
    },
    "eventStatus": {
      "enum": [
        "EventCancelled",
        "EventMovedOnline",
        "EventPostponed",
        "EventRescheduled",
        "EventScheduled"
      ]
    },
    "eventAttendanceMode": {
      "enum": [
        "MixedEventAttendanceMode",
        "OfflineEventAttendanceMode",
        "OnlineEventAttendanceMode"
      ]
    },
    "exhibitorListUrl": {
      "$ref": "#/definitions/url"
    },
    "exhibitorListDate": {
      "$ref": "#/definitions/utcDatetimeString"
    },
    "exhibitor": {
      "$ref": "#/definitions/exhibitorOrExhibitorArray"
    },
    "organizer": {
      "$ref": "#/definitions/organizerOrOrganizerArray"
    }
  }
}
