{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fair",
  "description": "A single arms and security fair, possibly including exhibitors.",
  "definitions": {
    "text": {
      "description": "A non-empty string.",
      "type": "string",
      "pattern": "^."
    },
    "url": {
      "$comment": "Poor source data will not pass even the simplest URL regex rule.",
      "type": "string"
    },
    "dateString": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "utcDatetimeString": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\+00:00$"
    },
    "organiser": {
      "type": "object",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "$ref": "#/definitions/text"
        },
        "alias": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "address": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "country": {
          "$ref": "#/definitions/text"
        },
        "website": {
          "$ref": "#/definitions/urlOrUrlArray"
        },
        "email": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "telephone": {
          "$ref": "#/definitions/textOrTextArray"
        },
        "social": {
          "$ref": "#/definitions/socialOrSocialArray"
        }
      }
    },
    "social": {
      "type": "object",
      "oneOf": [
        {
          "required": [
            "platform",
            "handle"
          ]
        },
        {
          "required": [
            "platform",
            "url"
          ]
        }
      ],
      "properties": {
        "platform": {
          "$ref": "#/definitions/text"
        },
        "handle": {
          "$ref": "#/definitions/text"
        },
        "url": {
          "$ref": "#/definitions/text"
        }
      }
    },
    "textOrTextArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/text"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/text"
          }
        }
      ]
    },
    "urlOrUrlArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/url"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/url"
          }
        }
      ]
    },
    "organiserOrOrganiserArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/organiser"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/organiser"
          }
        }
      ]
    },
    "socialOrSocialArray": {
      "anyOf": [
        {
          "$ref": "#/definitions/social"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/social"
          }
        }
      ]
    }
  },
  "type": "object",
  "required": [
    "name"
  ],
  "dependencies": {
    "exhibitor": [
      "exhibitorListDate"
    ]
  },
  "additionalProperties": false,
  "properties": {
    "name": {
      "$ref": "#/definitions/text"
    },
    "alias": {
      "$ref": "#/definitions/textOrTextArray"
    },
    "series": {
      "$ref": "#/definitions/text"
    },
    "edition": {
      "$ref": "#/definitions/text"
    },
    "startDate": {
      "$ref": "#/definitions/dateString"
    },
    "endDate": {
      "$ref": "#/definitions/dateString"
    },
    "address": {
      "$ref": "#/definitions/textOrTextArray"
    },
    "country": {
      "$ref": "#/definitions/text"
    },
    "online": {
      "type": "boolean"
    },
    "website": {
      "$ref": "#/definitions/urlOrUrlArray"
    },
    "social": {
      "$ref": "#/definitions/socialOrSocialArray"
    },
    "organiser": {
      "$ref": "#/definitions/organiserOrOrganiserArray"
    },
    "exhibitorListUrl": {
      "$ref": "#/definitions/url"
    },
    "exhibitorListDate": {
      "$ref": "#/definitions/utcDatetimeString"
    },
    "exhibitor": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "$ref": "#/definitions/text"
          },
          "alias": {
            "$ref": "#/definitions/textOrTextArray"
          },
          "exhibitorUrl": {
            "$ref": "#/definitions/url"
          },
          "address": {
            "$ref": "#/definitions/textOrTextArray"
          },
          "country": {
            "$ref": "#/definitions/text"
          },
          "website": {
            "$ref": "#/definitions/urlOrUrlArray"
          },
          "email": {
            "$ref": "#/definitions/textOrTextArray"
          },
          "telephone": {
            "$ref": "#/definitions/textOrTextArray"
          },
          "social": {
            "$ref": "#/definitions/socialOrSocialArray"
          },
          "category": {
            "$ref": "#/definitions/textOrTextArray"
          }
        }
      }
    }
  }
}
